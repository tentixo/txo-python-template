{
  "global": {
    "api-base-url": "https://api.example.com",
    "api-version": "v2",
    "timeout-seconds": 30,
    "max-retries": 3
  },
  "script-behavior": {
    "enable-rate-limiting": true,
    "rate-limit-per-second": 10,
    "enable-circuit-breaker": true,
    "circuit-breaker-threshold": 5,
    "circuit-breaker-timeout": 60,
    "api-timeouts": {
      "rest-timeout-seconds": 30,
      "max-retries": 3,
      "backoff-factor": 2.0
    },
    "jitter": {
      "min-factor": 0.8,
      "max-factor": 1.2
    },
    "rate-limiting": {
      "enabled": false,
      "calls-per-second": 10
    },
    "circuit-breaker": {
      "enabled": false,
      "failure-threshold": 5,
      "timeout-seconds": 60
    },
    "api-delay-seconds": 1,
    "enable-progress-bars": false
  },
  "environments": {
    "test": {
      "api-endpoint": "https://test-api.example.com",
      "verify-ssl": true
    },
    "prod": {
      "api-endpoint": "https://api.example.com",
      "verify-ssl": true
    }
  }
}